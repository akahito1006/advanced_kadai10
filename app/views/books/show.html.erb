<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-inverse">

          <tbody>
            <tr>
              <td>
                <%= link_to user_path do %>
                  <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size:'40x40' %><br />
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              
              <!----投稿者のブック編集削除機能---->
              <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger' %>
              </td>
              <% end %>
              <!---------------------------------->

          </tbody>
        </table>
    </div>
  </div>
</div>


